---
import Footer from "../components/sections/Footer/Footer.astro";
import HighlightedProductsSlider from "../components/sections/HighlightedProductsSlider/HighlightedProductsSlider";
import MastheadTwoColumns from "../components/sections/MastheadTwoColumns/MastheadTwoColumns.astro";
import Search from "../components/sections/Search/Search.astro";
import Layout from "../layouts/Layout.astro";
import { GetHighlightedProductsService } from "../services/getHighlightedProductsService";

process.loadEnvFile();

const products = await GetHighlightedProductsService.execute();
---

<Layout>
  <MastheadTwoColumns
    classname="bg-whitepink"
    textCardProps={{
      classname:
        "bg-gradient-to-r from-secondary to-primary bg-clip-text text-transparent font-heading max-lg:mx-auto max-lg:mt-30 z-20",
      heading: "Bella Pri Makes",
      headingFontSize: "text-7xl md:text-8xl",
      subheading: "Beleza com propÃ³sito, leveza e cor.",
      subheadingFontSize: "text-2xl md:text-3xl",
      linkCollection: [
        { href: "#highlights", label: "Destaques", color: "secondary" },
        { href: "#search", label: "Pesquisar", color: "secondary" },
      ],
    }}
    assetProps={{
      src: "/logo.png",
      alt: "Logo Bella Pri",
      width: 1080 * 0.7,
      height: 600 * 0.7,
    }}
  />
  <HighlightedProductsSlider products={products} client:load />
  <Search
    textCardProps={{
      heading: "Buscar",
      align: "center",
      headingFontSize: "text-6xl md:text-8xl",
      classname:
        "bg-gradient-to-r from-[#a029a1] to-[#e268bb] bg-clip-text text-transparent font-heading max-lg:mx-auto z-20",
    }}
  />
  <Footer />
</Layout>
