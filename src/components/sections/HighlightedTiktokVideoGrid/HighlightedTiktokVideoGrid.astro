---
import Container from "../../elements/Container/Container.astro";
import TextCard, {
  type Props as TextCardProps,
} from "../../elements/TextCard/TextCard.astro";
import TiktokVideoGrid from "./components/TiktokVideoGrid";

export interface Props {
  textCardProps: TextCardProps;
}

const { textCardProps } = Astro.props as Props;
---

<Container>
  <div
    class="bg-whitepink flex flex-col gap-6 lg:gap-12 px-4 md:px-12 lg:px-24 py-12 rounded-lg shadow-md"
  >
    <TextCard {...textCardProps} />
    <TiktokVideoGrid client:load />
  </div>
</Container>
