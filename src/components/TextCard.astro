---
import Anchor, { type Props as AnchorProps } from "./Anchor.astro";

export interface Props {
  classname?: string;
  eyebrow?: string;
  heading: string;
  subheading?: string;
  align?: "left" | "right" | "center";
  headingFontSize?: string;
  subheadingFontSize?: string;
  linkCollection?: AnchorProps[];
}

const {
  classname,
  eyebrow,
  heading,
  subheading,
  align,
  headingFontSize,
  subheadingFontSize,
  linkCollection,
} = Astro.props as Props;
const alignment =
  align === "center" ? "mx-auto" : align === "right" ? "ml-auto" : "mr-auto";
---

<div class={`flex items-center max-lg:!text-center ${classname}`}>
  <div class={alignment}>
    {eyebrow && <p class="uppercase text-[10px]">{eyebrow}</p>}
    {
      heading && (
        <h2 class={`mb-4 ${headingFontSize || "text-5xl"}`}>
          {heading}
        </h2>
      )
    }
    {
      subheading && (
        <p class={subheadingFontSize ? subheadingFontSize : "text-3xl"}>
          {subheading}
        </p>
      )
    }
    {
      linkCollection && linkCollection.length > 0 && (
        <div class="flex flex-col lg:flex-row items-center max-md:justify-center gap-4 mt-10">
          {linkCollection.map((props) => (
            <Anchor {...props} />
          ))}
        </div>
      )
    }
  </div>
</div>
